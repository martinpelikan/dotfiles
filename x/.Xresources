#include ".Xresources.dark"

URxvt.font: xft:Ubuntu Mono derivative Powerline Plus Nerd File Types Plus Font Awesome Plus Octicons Plus Pomicons:pixelsize=16:style=Regular,\
            xft:Droid Sans Mono for Powerline Plus Nerd File Types Mono Plus Font Awesome Plus Octicons Plus Pomicons:style=Regular
URxvt.boldFont: xft:Ubuntu Mono derivative Powerline Plus Nerd File Types Plus Font Awesome Plus Octicons Plus Pomicons:pixelsize=16:style=Bold,\
                xft:Droid Sans Mono for Powerline Plus Nerd File Types Mono Plus Font Awesome Plus Octicons Plus Pomicons:style=Bold

! Reduce font spaces by 1 pixel - avoid gaps in powerline symbols
URxvt.letterSpace: -1
URxvt.cursorBlink: true
URxvt.scrollBar: false
URxvt*saveLines: 12000

URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

Xft.antialias: 1
Xft.autohint: 0
Xft.dpi: 96
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault
Xft.rgba: rgb
