# Sensible keyboard autorepeat delay/speed
xset r rate 400 50
# Sensible cursor acceleration/speed
xset m 5/3 0
# Monitor goes into standby after 20 minutes, does not turn suspend/turn off
xset dpms 1200 0 0
# Swap Esc and Caps Lock
setxkbmap -option "caps:swapescape"
# Need to load this before i3, since it uses this with sensible-terminal
export TERMINAL=kitty

compton &
copyq &
xautolock -detectsleep -time 5 -locker "i3lock --nofork -c 000000" -notify 30 -notifier "notify-send -t 10000 'LOCKING screen in 30 seconds'" &

feh --randomize --bg-fill ~/.wallpaper/*

# Run all the VBox guest addition features
if hash VBoxClient-all 2>/dev/null; then
    VBoxClient-all
fi

if [ -z "$SSH_AUTH_SOCK" ] || [ -z "$SSH_AGENT_PID" ]; then
    eval $(ssh-agent)
fi
